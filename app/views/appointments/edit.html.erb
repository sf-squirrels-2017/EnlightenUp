<%= form_for @appointment do |appointment| %>

  <%= appointment.label :Mentor %><br>
  <%=appointment.text_field :mentor_id%><br>
  <%= appointment.label :Topic %><br>
  <%= appointment.text_field :topic %><br>
  <%= appointment.label :start_time %><br>
  <%= appointment.datetime_field :start_time %><br>
  <%= appointment.label :student %><br>
  <%= appointment.text_field :student %><br><br>
  <%= appointment.submit "Book", class: "btn btn-primary" %>

<%end%>
